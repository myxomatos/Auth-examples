rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read, write: if request.auth.uid != null;
      // allow write: if request.token.admin == true;
    }
    
    match /tasks/{taskId} {
     allow read, write: if true == true;
    }
    
  }
}